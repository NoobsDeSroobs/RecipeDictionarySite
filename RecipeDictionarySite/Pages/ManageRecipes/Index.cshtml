@model RecipeDictionarySite.Pages.PracticePages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].ImageURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].TimeToCook)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Recipe[0].NumHit)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeToCook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumHit)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
