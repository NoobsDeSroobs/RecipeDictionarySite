@page
@model RecipeDictionarySite.Pages.PracticePages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Recipe.Name" class="control-label"></label>
                <input asp-for="Recipe.Name" class="form-control" />
                <span asp-validation-for="Recipe.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.ImageURL" class="control-label"></label>
                <input asp-for="Recipe.ImageURL" class="form-control" />
                <span asp-validation-for="Recipe.ImageURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.TimeToCook" class="control-label"></label>
                <input asp-for="Recipe.TimeToCook" class="form-control" />
                <span asp-validation-for="Recipe.TimeToCook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Recipe.NumHit" class="control-label"></label>
                <input asp-for="Recipe.NumHit" class="form-control" />
                <span asp-validation-for="Recipe.NumHit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
